/*轮播区域*/
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/* 五个图标导航区域 */
.navContainer {
  display: flex;
}
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.nav-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.nav-item text{
  font-size: 26rpx;
}

/*推荐歌曲*/
.recommendContainer{
  padding: 22rpx;
}

/*推荐歌曲内容区域*/
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.recommendScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.recommendScroll .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.recommendScroll .scrollItem text{
  font-size: 26rpx;
  /* 单行文字 溢出的用...替代 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* //多行文字 溢出的用...替代 */
  overflow: hidden;
  text-overflow: ellipsis; /*使用 ... 替代*/
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对其模式*/
  -webkit-line-clamp: 2; /*设置最大函数，超出则...*/
}

/*排行榜区域*/
.topList{
  padding:  0 22rpx 22rpx 22rpx;
}
/*排行榜内容区*/
.topListMusic{
  height: 400rpx;
  font-size: 26rpx;
}
.topListMusic .swiperItem{
  width: 96%;
  background-color: #fbfbfb;
}
.topListMusic .title{
  display: block;
  padding: 10rpx 0rpx;
}
.topListMusic .musicItem{
  display: flex;
  height: 100rpx;
  margin-bottom: 20rpx;
  text-align: center;
  line-height: 100rpx;
}
.topListMusic .musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.topListMusic .musicItem .count{
  width: 100rpx;
}
.topListMusic .musicItem .musicItemName{
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}