/*轮播区域*/
.banner{
  width: 100%;
  height: 300rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
/* 五个图标导航区域 */
.navContainer {
  display: flex;
}
.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.nav-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.nav-item text{
  font-size: 26rpx;
}

/*推荐歌曲*/
.recommendContainer{
  padding: 22rpx;
}
.recommendContainer .header{
  margin-bottom: 10rpx;
}
.recommendContainer .header .title{
  font-size: 32rpx;
  color: #666;
  display: block;
  padding: 20rpx 0rpx;
}
.recommendContainer .header .heder-right{
  border: 1px solid black;
  border-radius: 20rpx;
  text-align: center;
  font-size: 22rpx;
  padding: 5rpx 10rpx;
  float: right;
}
.recommendScroll{
  display: flex;
}
.recommendScroll .scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.recommendScroll .scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}
.recommendScroll .scrollItem text{
  font-size: 26rpx;
  /* 单行文字 溢出的用...替代 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* //多行文字 溢出的用...替代 */
  overflow: hidden;
  text-overflow: ellipsis; /*使用 ... 替代*/
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对其模式*/
  -webkit-line-clamp: 2; /*设置最大函数，超出则...*/
}