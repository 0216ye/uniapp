/*头部搜索区域*/
.header{
    display: flex;
    padding: 10rpx;
}
.header image{
    width: 60rpx;
    height: 60rpx;
}
.header .search{
    font-size: 24rpx;
    color: #d43c33;
    border: 1rpx solid #e6dada;
    border-radius: 10rpx;
    /*flex:1,代表可以伸缩，父元素宽度自动为100%*/
    flex: 1;
    margin: 0 20rpx;
    text-align: center;
    line-height: 60rpx;
}

/*导航区域*/
.scrollNav{
    width: 96%;
    display: flex;
    height: 62rpx;
    box-sizing: border-box;
    padding: 0 10rpx;
}
.scrollNav .navItem{
    margin:0 20rpx;
    white-space: nowrap;
}
.scrollNav .navItem .content{
    text-align: center;
    line-height: 60rpx;
    font-size: 28rpx;
}
.scrollNav .navItem .active{
    border-bottom: 1px solid #d43c33;
}

/*视频区域*/
.videoScroll{
    margin-top: 5rpx;
    /*calc：可以动态计算高度,1vh=1%视口的高度*/
    height: calc(100vh - 153.2rpx);
}
.videoItem{
    padding: 0 3%;
}
.videoItem .common{
    width: 100%;
    height: 360rpx;
    text-align: center;
    border-radius: 10rpx;
}

.videoItem .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
/* footer */
.footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
}
.footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}
.footer .comments_praised {
    float: right;
}
.comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
}
.comments_praised .btn:after {
    border: none;
}

.comments_praised .item {
    margin-left: 50rpx;
    position: relative;
}

.comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
}